@model ShoppingStoreOnline.Domain.Entities.Cart

<div class="navbar-right center-block">
    @Html.ActionLink("Checkout", "Index", "Cart", new { returnUrl= Request.Url.PathAndQuery}, new { @class= "btn btn-success navbar-btn" })
</div>
<div class="navbar-text navbar-right">
    <b>Your cart:</b>
    @Model.Lines.Sum(x=> x.Quantity) item(s),
    @Model.ComputeTotalValue().ToString("c")
    <b>!.</b>
</div>
